<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/min_padding_thinh">
    <ImageView

        android:id="@+id/iv_dong_drawer"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/min_margin_thinh"/>
    <TextView
        android:id="@+id/tv_dong_drawer"
        android:textSize="@dimen/text_size_large_thinh"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_dong_drawer"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/iv_dong_drawer" />
</RelativeLayout>