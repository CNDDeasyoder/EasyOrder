<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="0dp"
    android:layout_margin="@dimen/min_margin_thinh">
    <TextView
        android:id="@+id/tv_ten"
        android:textSize="@dimen/text_size_large_thinh"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_thinh"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_view_thinh"/>

    <TextView
        android:id="@+id/tv_so_luong"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_view_thinh"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_size_large_thinh" />

</LinearLayout>