<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/min_margin_thinh"
    android:elevation="@dimen/do_bong"
    android:background="@color/thinh_white"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_thinh">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_numb_review"
            android:textSize="@dimen/text_size_large_thinh"
            android:gravity="center"
            android:textColor="@color/thinh_white"
            android:textStyle="bold"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:text="5"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_thinh">
        <LinearLayout
            android:layout_marginTop="@dimen/margin_thinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ten_review"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/text_size_large_thinh"
                android:text="ten mon an"
                android:textColor="#5D4037"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingBar_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:progressTint="@color/colorAccent"
                android:secondaryProgressTint="@color/colorAccent"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>