<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/min_padding_thinh"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:elevation="@dimen/do_bong"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/min_margin_thinh"
        android:background="@drawable/headline">

        <ImageButton
            android:id="@+id/btn_nav_ttoan_thinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/headline"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/tv_headline_thanhtoan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/thanh_toan_thinh"
            android:textColor="@color/thinh_white"
            android:textSize="@dimen/text_size_large_thinh" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_thinh"
            android:layout_weight="1"
            >

            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2.5"
                android:layout_marginBottom="@dimen/min_margin_thinh">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tong_tien_thinh"
                    android:textSize="@dimen/text_size_large_thinh"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_thinh"/>
                <TextView
                    android:id="@+id/tv_tong_tien_thinh"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_thinh"
                    android:textSize="@dimen/text_size_large_thinh"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:stretchColumns="*"
                android:background="@drawable/input_view"
                android:padding="5dp"
                >
                <TableRow
                    android:weightSum="1">
                    <TextView
                        android:layout_weight="0.4"
                        android:layout_height="@dimen/height_view_thinh"
                        android:layout_width="wrap_content"
                        android:text="@string/mon_an_thinh"
                        android:textSize="@dimen/text_size_large_thinh"
                        android:gravity="center"/>
                    <TextView
                        android:layout_weight="0.4"
                        android:layout_height="@dimen/height_view_thinh"
                        android:layout_width="wrap_content"
                        android:text="@string/don_gia_thinh"
                        android:textSize="@dimen/text_size_large_thinh"
                        android:gravity="center"/>
                </TableRow>
                <ListView
                    android:id="@+id/lv_thanh_toan"
                    android:layout_height="@dimen/height_list_view"
                    android:layout_width="wrap_content"
                    android:fastScrollEnabled="true">
                </ListView>

            </TableLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/min_margin_thinh"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2.7"
                android:elevation="@dimen/do_bong"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_thanh_toan_tong_thinh"
                    android:layout_width="match_parent"
                    android:background="@drawable/button"
                    android:textColor="@color/thinh_white"
                    android:textSize="@dimen/text_size_small_thinh"
                    android:textStyle="bold"
                    android:elevation="@dimen/do_bong"
                    android:layout_height="match_parent"
                    android:text="@string/thanh_toan_thinh"/>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>
