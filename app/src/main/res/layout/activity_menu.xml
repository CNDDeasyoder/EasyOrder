<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginTop="1dp"
        android:elevation="@dimen/do_bong"
        android:background="@drawable/headline">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/headline"
            android:src="@drawable/back_icon" />


        <TextView
            android:id="@+id/tv_headline_chonmon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Chọn món"
            android:textColor="@color/thinh_white"
            android:textSize="@dimen/text_size_large_thinh" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_weight="1.5"
        android:divider="@color/thinh_white"
        android:dividerHeight="15.0sp"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_thinh"
        android:background="@drawable/headline">
        <TextView
            android:id="@+id/tv_tongtien_hien"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:text="Tổng tiền: "
            android:textColor="#ffffff"
            android:textSize="23dp"
            android:gravity="center_vertical"/>
        <Button
            android:id="@+id/btn_them_mon_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/them_mon"
            android:textColor="@color/thinh_white"
            android:textSize="@dimen/text_size_small_thinh"
            android:textStyle="bold"
            android:padding="@dimen/min_padding_thinh"
            android:background="@drawable/button"
            android:paddingLeft="@dimen/padding_thinh"
            android:paddingRight="@dimen/padding_thinh"/>
    </LinearLayout>




</LinearLayout>