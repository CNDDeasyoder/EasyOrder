<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_marginTop="1dp"
        android:elevation="@dimen/do_bong"
        android:background="@drawable/headline">

        <ImageButton
            android:id="@+id/btn_back_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/headline"
            android:src="@drawable/back_icon" />


        <TextView
            android:id="@+id/tv_headline_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Review"
            android:textColor="@color/thinh_white"
            android:textSize="@dimen/text_size_large_thinh" />
    </RelativeLayout>
    <ListView
        android:layout_marginTop="@dimen/margin_thinh"
        android:id="@+id/lv_review"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_weight="1.5"
        android:divider="@color/thinh_white"
        android:dividerHeight="5.0sp"
        >
    </ListView>

    <Button
        android:id="@+id/btn_xac_nhan_review"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_thinh"
        android:background="@drawable/headline"
        android:textColor="@color/thinh_white"
        android:textSize="@dimen/text_size_small_thinh"
        android:text="Xác nhận review"
        />
</LinearLayout>