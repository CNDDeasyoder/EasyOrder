<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/get_code"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        >

    </LinearLayout>
    <ImageView
        android:id="@+id/mainlogo"
        android:src="@drawable/p1"
        android:layout_weight="3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:id="@+id/lnr1"
        android:layout_below="@id/mainlogo"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

            <EditText
                android:id="@+id/edt_code"
                android:background="@drawable/layout_tv"
                android:hint="CODE"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="@dimen/height_view_thinh" />

            <Button
                android:id="@+id/btn_login"
                android:text="@string/text_login"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:textColor="@color/thinh_white"
                android:textSize="@dimen/text_size_small_thinh"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
    </LinearLayout>



</LinearLayout>